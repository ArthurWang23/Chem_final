# Build child (Chem_new-main)
FROM node:20-alpine AS child_builder
WORKDIR /child
RUN corepack enable
COPY Chem_new-main/pnpm-lock.yaml Chem_new-main/package.json ./
RUN pnpm i --frozen-lockfile
COPY Chem_new-main .
RUN pnpm run build

# Build parent (pure_admin_antv_g6_phar_2025_04_07)
FROM node:20-alpine AS parent_builder
WORKDIR /parent
RUN corepack enable
COPY pure_admin_antv_g6_phar_2025_04_07/pnpm-lock.yaml pure_admin_antv_g6_phar_2025_04_07/package.json ./
RUN pnpm i --frozen-lockfile
COPY pure_admin_antv_g6_phar_2025_04_07 .
RUN pnpm run build

# Runtime Nginx
FROM nginx:1.25-alpine
# 为健康检查安装 curl
RUN apk add --no-cache curl
COPY Chem_new-main/deploy/nginx/default.conf /etc/nginx/conf.d/default.conf
COPY --from=parent_builder /parent/dist /usr/share/nginx/html/parent
COPY --from=child_builder  /child/dist  /usr/share/nginx/html/child
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]